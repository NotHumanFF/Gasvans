<div class="mainbox">
    <div class="leftbox">
        <form action="/confirm" method="post">
            <h1>Confirm Order</h1>
            <h3><i class="fa-solid fa-address-card"></i>   Address Details</h3>
            <p id="details"><%= Name %> , <%= Phone %> </p>
            <p><%= Email %></p> 
            <p id="details"><%= Area %>, <%= City %>, <%= State %> : <%= Postcode %>  </p>
            <h3> <i class="fa-solid fa-truck-droplet"></i>   Order Details</h3>
            <p> <%= FuelType %>, <b><%= Quantity %></b> Litres</p>
            <p>  <%= Date %></p>
            <div class="btnbox">
                <button id="btn" type="submit">Place Order</button>
                <a class="cancel" href="/services">Cancel</a>
            </div>
        </form>
    </div>
  
    <lottie-player   class="svg" src="https://assets7.lottiefiles.com/packages/lf20_kx6a1byu.json"  background="transparent"  speed="1"  style="width: 400px; height: 400px;"  loop  autoplay></lottie-player>
</div>



