<script src="https://kit.fontawesome.com/0ac5a0764e.js" crossorigin="anonymous"></script>
<div class="login-container">
    <div class="login-leftbox">
        <h1>Login</h1>
        <form class="loginform" action="/login" method="post">
            <div class="inputbox">
                <input type="text" name="username" placeholder="Your Name" required>
                <i class="fa-solid fa-user"></i>
            </div> 
            <div class="inputbox">
                <input type="email" name="useremail" placeholder="Email" required>
                <i class="fa-solid fa-envelope"></i>
            </div> 
            <div class="inputbox">      
                <input type="password" name="password" placeholder="Password" required>
                <i class="fa-solid fa-lock"></i>
            </div> 
            <button id="btn" class="login-btn" type="submit">Login</button>
        </form>
        <p class="login-text">
            Don't have an account?
            <span>
             <a class="register-text" href="/register">Create your account</a>   
            </span>
        </p>
    </div>

    <div class="login-rightbox">
        <div class="login-rightbox-container">
            <h1>Welcome</h1>
            <hr class="welcomehr">
            <p class="login-rightbox-container-text">GASVANS is an online platform through which you can prebook/order refueling of your DG Sets or any diesel equipment at your location anytime & anywhere!</p>
        </div>
    </div>
               


</div>
       
